mixin menu(user, session)
    - var absolute=""
                - if(user){ absolute = "index.html"}
    div(data-sticky-container)
      div(data-sticky data-margin-top="0")
        .title-bar(data-responsive-toggle="mainMenu", data-hide-for="large")#mainMenuResponsive
          a(href="index.html").title-bar-title: img(src="site/img/club-lumen.svg").logo-img
          button.menu-icon(type="button" data-toggle="mainMenu")
        .top-bar.stacked#mainMenu
            .menutopbar
                ul.menu(data-smooth-scroll)
                    li: a(href="index.html").logo.show-for-large: img(src="site/img/club-lumen.svg").logo-img
            .top-bar-left
                ul.menu(data-magellan data-smooth-scroll data-offset="280")
                    li: a(href="https://www.lumen.com.mx/" target="_blank") Lumen
                    li: a(href=absolute+"#que-es") ¿Qué es?
                    li: a(href=absolute+"#activacion") Registro
                    li: a(href=absolute+"#promociones") Promociones
                    li: a(href=absolute+"#comprar-puntos") Comprar puntos
                    li: a(href=absolute+"#certificado-de-regalo") Certificado de regalo
                    li: a(href=absolute+"#contacto") Contacto
                    - if(session)
                        li: a(href="index.html") Cerrar sesión
                    - else 
                        li: a(href="#iniciar-sesion") Iniciar sesión
           
                

